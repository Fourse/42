#include "libft.h"

void	ft_striteri(char *s, void (*f)(unsigned int, char *))
{
	int i;

	i = 0;
	if (s[i] == NULL || f == NULL)
		return ;
	while (*s && s[i] != NULL)
		f(i, s[i++]);
}
