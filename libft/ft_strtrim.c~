#include "libft.h"

char	*ft_strtrim(char const *s)
{
	char const *end;

	while (*s == ' ' || *s == '\t' || *s == '\n')
		s++;
	end = s + ft_strlen(s) - 1;
	while (*end == ' ' || *end == '\t' || *end == '\n')
		end--;
	return (ft_strsub(s, 0, end - s + 1));
}
