#include "libft.h"

void	ft_strrev(char *s)
{
	char *str;
	char c;

	str = ft_strnew(ft_strlen(s));
	ft_strcpy(str, s);
	str = str + ft_strlen(s);
	while (s)
	{
		c = *str;
		*str-- = *s;
		*s++ = c;
	}
}
